<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eyespy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/eye_spy_launcher"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.eyespy.MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:label="@string/create_game" 
            android:name="com.example.eyespy.createGame"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:label="@string/choose_game"
            android:name="com.example.eyespy.listGames"
            android:screenOrientation="portrait" >
        </activity>
        
        <activity
            android:label="@string/play_game"
            android:name="com.example.eyespy.playGame"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:label="@string/winner"
            android:name="com.example.eyespy.gameWon"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:label="@string/loser"
            android:name="com.example.eyespy.gameLoss"
            android:screenOrientation="portrait">
        </activity>
        
        <activity
            android:label="@string/app_name"
            android:name="com.example.eyespy.testActivity"
            android:screenOrientation="portrait">
        </activity>
        
        
    </application>

</manifest>
